<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <!--主页RadioButton-->
    <style name="style_radio_button_main">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:drawablePadding">-10dp</item>
        <item name="android:textColor">@drawable/text_color_radio_button_main_selector</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--实时页面污染物RadioButton-->
    <style name="style_radio_button_real_time_pollutants">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:background">@drawable/bg_radio_button_real_time</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_real_time_data_address_pollutant">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>


    <!-- 历史页面筛选日期textview -->
    <style name="style_text_view_history_date">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:background">@drawable/btn_fbt2</item>
    </style>

    <!--历史页面地图类型RadioButton-->
    <style name="style_radio_button_history_type">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#333333</item>
        <item name="android:background">@drawable/bg_radio_button_real_time</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <!-- 统计页面是筛选RadioButton-->
    <style name="style_radio_button_stat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:padding">5dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">#0055FF</item>
        <item name="android:background">@drawable/bg_radio_button_check</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
