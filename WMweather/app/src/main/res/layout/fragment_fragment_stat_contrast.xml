<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="10"
              android:background="#EEEEEE"
              android:padding="10dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="时间"
            android:textColor="#333333"
            android:textSize="16sp"
            android:id="@+id/textView"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_view_stat_contrast_date_start"
                    style="@style/style_text_view_history_date"
                    android:background="@null"
                    android:textColor="#333333"
                    android:layout_marginTop="10dp"
                    android:text="2016-03-02"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_margin="5dp"
                    android:background="#222222"/>
            </LinearLayout>
            <View
                android:layout_width="15dp"
                android:layout_height="1dp"
                android:layout_gravity="center_vertical"
                android:background="#333333"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/text_view_stat_contrast_date_end"
                    style="@style/style_text_view_history_date"
                    android:background="@null"
                    android:textColor="#333333"
                    android:layout_marginTop="10dp"
                    android:text="2016-03-02"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_margin="5dp"
                    android:background="#222222"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:layout_marginTop="2dp"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="步长值"
            android:textColor="#333333"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_group_stat_contrast_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_button_stat_hour"
                style="@style/style_radio_button_stat"
                android:checked="true"
                android:text="时" />

            <RadioButton
                android:id="@+id/radio_button_stat_day"
                style="@style/style_radio_button_stat"
                android:text="天" />
            <RadioButton
                android:id="@+id/radio_button_stat_month"
                style="@style/style_radio_button_stat"
                android:text="月" />
            <RadioButton
                android:id="@+id/radio_button_stat_year"
                style="@style/style_radio_button_stat"
                android:text="年" />
        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="2dp"
        android:layout_weight="1"
        android:background="#FFFFFF"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="污染物"
            android:textColor="#333333"
            android:textSize="16sp" />

        <weather.wm.com.wmweather.common.view.FlowRadioGroup
            android:id="@+id/radio_group_stat_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_button_AQI"
                style="@style/style_radio_button_stat"
                android:checked="true"
                android:text="AQI" />

            <RadioButton
                android:id="@+id/radio_button_PM2"
                style="@style/style_radio_button_stat"
                android:text="PM2" />
            <RadioButton
                android:id="@+id/radio_button_PM10"
                style="@style/style_radio_button_stat"
                android:text="PM10" />
            <RadioButton
                android:id="@+id/radio_button_CO"
                style="@style/style_radio_button_stat"
                android:text="CO" />
            <RadioButton
                android:id="@+id/radio_button_NO2"
                style="@style/style_radio_button_stat"
                android:text="NO2" />
            <RadioButton
                android:id="@+id/radio_button_SO2"
                style="@style/style_radio_button_stat"
                android:text="SO2" />
            <RadioButton
                android:id="@+id/radio_button_O3"
                style="@style/style_radio_button_stat"
                android:text="O3" />
        </weather.wm.com.wmweather.common.view.FlowRadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:background="#FFFFFF"
        android:gravity="center">
        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="展示"
            android:textColor="#333333"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/radio_button_stat_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/radio_button_bar_chart"
                style="@style/style_radio_button_stat"
                android:checked="true"
                android:text="柱状图" />

            <RadioButton
                android:id="@+id/radio_button_Line_chart"
                style="@style/style_radio_button_stat"
                android:text="折线图" />

        </RadioGroup>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FFFFFF"
        android:layout_weight="1"
        android:layout_marginTop="2dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="A图"
                android:textColor="#333333"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_A"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#DDDDDD"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="B图"
                android:textColor="#333333"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#EEEEEE"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/spinner_B"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_layout_stat_contrast_chart"
        android:layout_width="match_parent"
        android:layout_margin="15dp"
        android:background="#FFFFFF"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="5"
        android:orientation="vertical">

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/bar_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/line_chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>

</LinearLayout>
